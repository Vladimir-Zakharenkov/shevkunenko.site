@model IEnumerable<TitleOfPage>

<h3 class="p-2 alert-primary text-white text-center">Title of Page</h3>

<div class="container-fluid mt-3">

    <div class="row">
        <div class="col font-weight-bold">TitleOfPageId</div>
        <div class="col font-weight-bold">PageNumber</div>
        <div class="col font-weight-bold">Title</div>
        <div class="col font-weight-bold">Description</div>
        <div class="col"></div>
    </div>

    <form asp-action="AddTitleOfPage" method="post">
        <div class="row">
            <div class="col"><input name="TitleOfPageId" class="form-control"</div>
            <div class="col"><input name="PageNumber" class="form-control"</div>
            <div class="col"><input name="Title" class="form-control"</div>
            <div class="col"><input name="Description" class="form-control"</div>
            <div class="col"><button type="submit" class="btn btn-primary">Add</button></div>
        </div>
    </form>

    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col text-center p-2">No Data</div>
        </div>
    }
    else
    {
        @foreach (TitleOfPage t in Model)
        {
            <div class="rwo p-2">
                <div class="col">@t.TitleOfPageId</div>
                <div class="col">@t.PageNumber</div>
                <div class="col">@t.Title</div>
                <div class="col">@t.Description</div>
            </div>
        }
    }

</div>

